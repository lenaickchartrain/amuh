{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Medecin - Ajouter {% endblock %}

{% block body %} 
    {% for message in app.session.flashbag.get('error') %}
        {{ message }}
    {% endfor %}
    <div>Ajouter un medecin</div>
    <div id="form">
        {{ form_start(form, {'attr': {'class': 'form-horizontal' } }) }}
        
        {{ form_errors(form) }}
        
        {{ include("AmuhBundle:Personne:add.html.twig") }}
        
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.medRue, 'Rue : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.medRue) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.medRue, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.medComplementAdresse, 'Complément adresse : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.medComplementAdresse) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.medComplementAdresse, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
		
		<div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.medCodePostal, 'Code postal : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.medCodePostal) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.medCodePostal, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
		
		<div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.medVille, 'Ville : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.medVille) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.medVille, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.medEtat, 'Etat : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.medEtat) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.medEtat, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        
        {# Génération automatique des champs pas encore écrits.
            Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
            et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div>
{% endblock %}