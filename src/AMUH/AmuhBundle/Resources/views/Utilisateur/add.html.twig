{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Utilisateur - Ajouter {% endblock %}

{% block body %} 
    {% for message in app.session.flashbag.get('error') %}
        {{ message }}
    {% endfor %}
    <div>Ajouter un utilisateur</div>
    <div id="form">
        {{ form_start(form, {'attr': {'class': 'form-horizontal' } }) }}
        
        {{ form_errors(form) }}
        
        {{ include("AmuhBundle:Personne:add.html.twig") }}
        
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.usrEmail, 'Email : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.usrEmail) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.usrEmail, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.usrPassword, 'Mot de passe : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.usrPassword) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.usrPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.usrEtat, 'Etat : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.usrEtat) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.usrEtat, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.roles, 'Roles : ', {'label_attr': {'class': 'col-sm-2 control-label' } }) }}
            
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.roles) }}

            <div class="col-sm-10">
              {# Génération de l'input. #}
              {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
            
        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        
        {# Génération automatique des champs pas encore écrits.
            Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
            et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div>
{% endblock %}